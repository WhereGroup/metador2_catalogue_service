<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <!-- SERVICE -->
        <parameter key="metador.csw.service.class">Plugins\WhereGroup\CatalogueServiceBundle\Component\Csw</parameter>

        <!-- EVENTLISTENER -->
        <parameter key="csw.app.listener.class">Plugins\WhereGroup\CatalogueServiceBundle\EventListener\ApplicationListener</parameter>

        <!-- FORM TYPE -->
        <parameter key="csw.form.type.class">Plugins\WhereGroup\CatalogueServiceBundle\Form\CswType</parameter>
    </parameters>
    <services>
        <!-- SERVICE -->
        <service id="metador_catalogue_service" class="%metador.csw.service.class%" public="true">
            <argument type="service" id="kernel" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="templating" />
            <argument type="service" id="metador_logger" />
            <argument type="service" id="metador_plugin" />
            <argument type="service" id="metador_metadata_search" />
            <argument type="service" id="metador_metadata" />
        </service>

        <!-- EVENTLISTENER -->
        <service id="catalogue_service_app_listener" class="%csw.app.listener.class%">
            <tag name="kernel.event_listener" event="application.loading" method="onLoading"/>
        </service>
        <service id="mcatalogue_service_source_listener" class="Plugins\WhereGroup\CatalogueServiceBundle\EventListener\SourceListener">
            <tag name="kernel.event_listener" event="source.confirm_delete" method="onConfirm" />
            <tag name="kernel.event_listener" event="source.post_delete" method="onPostDelete" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>

        <!-- FORM TYPE -->
        <service id="csw_form_type" class="%csw.form.type.class%">
            <argument type="service" id="metador_source" />
            <argument type="service" id="metador_configuration" />
            <argument type="service" id="metador_user" />
            <argument type="service" id="metador_plugin" />
            <tag name="form.type" alias="task" />
        </service>
    </services>
</container>
